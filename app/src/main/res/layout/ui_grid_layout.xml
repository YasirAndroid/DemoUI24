<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_main"
        android:paddingTop="30dp">

        <Button
            android:id="@+id/btn_details"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/main_yellow"
            android:text="Details of inspected Filed:"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_details">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">
                <TableRow>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_height="40dp"
                        android:layout_width="0dp"
                        android:text="Column 1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/et_theme_header"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_height="40dp"
                        android:layout_width="0dp"
                        android:text="Column 2"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/et_theme_header" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_height="40dp"
                        android:layout_width="0dp"
                        android:text="Column 3"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/et_theme_header" />

                </TableRow>

                <TableRow>
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/c1r1"
                        android:layout_height="55dp"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:background="@drawable/et_theme_box"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/c2r1"
                        android:layout_height="55dp"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/et_theme_box" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/c3r1"
                        android:layout_height="55dp"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/et_theme_box" />

                </TableRow>

                <TableRow>
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/c1r2"
                        android:layout_height="55dp"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:background="@drawable/et_theme_box"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/c2r2"
                        android:layout_height="55dp"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/et_theme_box" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/c3r2"
                        android:layout_height="55dp"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/et_theme_box" />

                </TableRow>

                <TableRow>
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/c1r3"
                        android:layout_height="55dp"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:background="@drawable/et_theme_box"/>

                    <com.google.android.material.textfield.TextInputEditText

                        android:id="@+id/c2r3"
                        android:layout_height="55dp"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/et_theme_box" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/c3r3"
                        android:layout_height="55dp"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/et_theme_box" />

                </TableRow>

                <TableRow>
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/c1r4"
                        android:layout_height="55dp"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:background="@drawable/et_theme_box"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/c2r4"
                        android:layout_height="55dp"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/et_theme_box" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/c3r4"
                        android:layout_height="55dp"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/et_theme_box" />

                </TableRow>

                <TableRow>
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/c1r5"
                        android:layout_height="55dp"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:background="@drawable/et_theme_box"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/c2r5"
                        android:layout_height="55dp"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/et_theme_box" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/c3r5"
                        android:layout_height="55dp"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/et_theme_box" />

                </TableRow>

            </TableLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/main_yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_main"
            app:layout_constraintEnd_toStartOf="@id/btn_next"
            app:layout_constraintVertical_bias="0.0"
            android:text="Save"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/main_yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_save"
            app:layout_constraintTop_toBottomOf="@id/cv_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:text="Next"
            android:textAllCaps="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
